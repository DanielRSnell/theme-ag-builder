<!-- Tailwind and DaisyUI CDN links -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/daisyui@3.5.0/dist/full.css" rel="stylesheet">

<style>
        .launch-container {
            background-image: url('https://broke.dev/wp-content/uploads/2024/06/placeholder-light.svg');
            background-size: cover;
            background-position: center;
        }
        .h-admin {
            height: 590px;
        }
        .bg-overlay {
            /* background-color: rgba(0, 0, 0, 0.3); */
        }
    </style>

<div id="agnostic-launch-container" class="prose rounded-3xl" data-theme="light">
        <div class="relative flex items-center justify-center w-full mt-4 overflow-hidden border rounded-lg bg-base-100 border-base-300 launch-container h-admin">
            <div class="absolute inset-0 z-0 bg-center bg-cover opacity-50"></div>
            <div class="absolute inset-0 z-10 bg-overlay"></div>
            <a class="relative z-20 btn btn-primary" href="{{ post.link }}?agnostic=builder&template_id={{post.id}}&template_link={{post.link}}">Launch Editor</a>
        </div>
    </div>
    

    <script>
        // This script ensures Tailwind doesn't affect other WordPress admin styles
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                    const target = mutation.target;
                    if (!target.classList.contains('prose')) {
                        target.classList.add('prose');
                    }
                }
            });
        });

        observer.observe(document.getElementById('agnostic-launch-container'), {
            attributes: true,
            subtree: true,
            attributeFilter: ['class']
        });
    </script>